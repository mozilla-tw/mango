<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/spotlight_mock_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/mock_button"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <View
        android:layout_above="@id/mock_button"
        android:layout_alignParentStart="true"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/onboarding_pointer"
        android:elevation="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="2dp"/>

    <androidx.cardview.widget.CardView
        android:layout_above="@id/mock_button"
        android:layout_alignParentStart="true"
        android:id="@+id/onboarding_dialog"
        android:layout_width="232dp"
        android:layout_height="144dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shopping_search_plateform_onboarding_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/shopping_search_plateform_onboarding_title"
                android:textColor="@color/paletteLightBlack100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/shopping_search_plateform_onboarding_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/onboarding_2_smart_shopping_search_description"
                android:textColor="@color/paletteLightBlack100"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shopping_search_plateform_onboarding_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/next"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:background="@drawable/bg_plateform_onboarding_button"
                android:text="@string/action_ok"
                app:layout_constraintTop_toBottomOf="@id/shopping_search_plateform_onboarding_message"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>