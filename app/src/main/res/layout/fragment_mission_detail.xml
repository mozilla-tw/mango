<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dmd_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/paletteWhite100"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="360:268"
            android:background="@drawable/bg_mission_detail_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_mission_detail_container"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dmd_mission_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:gravity="center"
                android:text="7-day challenge for Rs 15,000 shopping coupon"
                android:textColor="@color/contentHeaderTextColor"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp">

                <LinearLayout
                    android:id="@+id/dmd_day_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_0_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_checked" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/paletteWhite100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_0_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 12"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_2"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_0"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_1_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 13"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_3"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_1"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_2_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 14"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_2"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_3_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 15"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp">

                <LinearLayout
                    android:id="@+id/dmd_day_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_4_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 16"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_6"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_4"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_5_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 17"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dmd_day_7"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_5"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_6_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_6_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 18"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dmd_day_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dmd_day_6"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="@dimen/msrp_mission_detail_day_width"
                        android:layout_height="@dimen/msrp_mission_detail_day_width">

                        <ImageView
                            android:id="@+id/dmd_day_7_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/bg_mission_detail_day_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/paletteLightGreyA100"
                            android:textSize="@dimen/msrp_mission_detail_button_text_size" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/dmd_day_7_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/msrp_mission_detail_day_text_margin_top"
                        android:gravity="center"
                        android:text="Sep 19"
                        android:textColor="@color/paletteDarkGreyE100"
                        android:textSize="@dimen/msrp_mission_detail_day_text_size" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/dmd_redeem"
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="@dimen/msrp_mission_detail_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_mission_detail_button"
                android:enabled="false"
                android:text="@string/msrp_challenge_detail_btn_redeem"
                android:textAllCaps="false"
                android:textColor="@color/paletteWhite100"
                android:textSize="@dimen/msrp_mission_detail_button_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/paletteLightGreyA100" />

            <TextView
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/msrp_challenge_detail_desc_point_1_title"
                android:textColor="#000"
                android:textSize="@dimen/msrp_mission_detail_button_text_size" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="148dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/challenge_details" />

            <TextView
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/msrp_challenge_detail_desc_point_1_message"
                android:textColor="@color/paletteDarkGreyD100"
                android:textSize="12sp" />

            <TextView
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/msrp_challenge_detail_desc_point_2_title"
                android:textColor="#000"
                android:textSize="@dimen/msrp_mission_detail_button_text_size" />

            <TextView
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/msrp_challenge_detail_desc_point_2_message"
                android:textColor="@color/paletteDarkGreyD100"
                android:textSize="12sp" />

            <Button
                android:id="@+id/dmd_im_in"
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="@dimen/msrp_mission_detail_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_mission_detail_button"
                android:text="@string/msrp_challenge_detail_btn_im_in"
                android:textAllCaps="false"
                android:textColor="@color/paletteWhite100"
                android:textSize="@dimen/msrp_mission_detail_button_text_size" />

            <TextView
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/msrp_challenge_detail_btn_terms_of_use"
                android:textColor="@color/paletteDarkGreyD100"
                android:textSize="12sp" />

            <View
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/paletteLightGreyA100" />

            <Button
                android:id="@+id/dmd_quit"
                android:layout_width="@dimen/msrp_mission_detail_horizontal_width"
                android:layout_height="@dimen/msrp_mission_detail_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_mission_detail_button_quit"
                android:text="@string/msrp_challenge_detail_btn_quit"
                android:textAllCaps="false"
                android:textColor="@color/palettePeach100"
                android:textSize="@dimen/msrp_mission_detail_button_text_size" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dmd_reward_landing"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/reward_landing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
