<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/reward_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/reward_complete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp"
            android:background="@null"
            app:layout_constraintVertical_bias="0.233"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@id/reward_landing"
            app:layout_constraintEnd_toEndOf="@id/reward_landing"
            app:layout_constraintTop_toTopOf="@id/reward_landing"
            app:layout_constraintBottom_toBottomOf="@id/reward_landing"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/msrp_coupon_title"
        android:textColor="@color/contentHeaderTextColor"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:text="@string/msrp_coupon_body_1"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/coupon_code"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_shopping_coupon_code"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/contentHeaderTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="W5KPX3" />

        <ProgressBar
            android:id="@+id/loading_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="@id/coupon_code"
            app:layout_constraintBottom_toBottomOf="@id/coupon_code"
            app:layout_constraintStart_toStartOf="@id/coupon_code"
            app:layout_constraintEnd_toEndOf="@id/coupon_code"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/coupon_copy_btn"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="2dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/msrp_coupon_button_1"
        android:textColor="@color/paletteDarkBlueC100"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/coupon_expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Expires 03/09/2021" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginEnd="40dp"
        android:background="@color/paletteLightGreyA100" />

    <TextView
        android:id="@+id/coupon_go_shopping_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/msrp_mission_detail_button_height"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_shopping_coupon_go_shopping"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/msrp_coupon_button_2"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:text="@string/msrp_coupon_body_2"
        android:textColor="@color/paletteDarkGreyE100"
        android:textSize="14sp" />

</LinearLayout>
