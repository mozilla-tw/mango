<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bg_msrp_challenge"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/challenge_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/challenge_red_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/msrp_red_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challenge_title"
        style="@style/Headline4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:letterSpacing="0.11"
        android:maxLines="2"
        android:textColor="@color/contentHeaderTextColor87"
        app:layout_constraintEnd_toStartOf="@id/challenge_red_dot"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/challenge_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="7-day challenge for free VPN" />

    <ProgressBar
        android:id="@+id/challenge_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:progressBackgroundTint="@color/paletteLightGreyA100"
        android:progressTint="@color/paletteDarkBlueC100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/challenge_image" />

    <TextView
        android:id="@+id/challenge_percentage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/paletteDarkBlueC100"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/challenge_progress"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="74%" />

    <TextView
        android:id="@+id/challenge_expiration_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/challenge_percentage_text"
        app:layout_constraintEnd_toStartOf="@id/challenge_percentage_text"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/challenge_image"
        tools:text="Expires 02/08/2019" />


</androidx.constraintlayout.widget.ConstraintLayout>