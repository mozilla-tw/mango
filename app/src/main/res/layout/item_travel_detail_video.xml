<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_travel_detail_item">

    <ImageView
        android:id="@+id/explore_video_image"
        android:layout_width="130dp"
        android:layout_height="98dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/explore_video_play_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginEnd="7.5dp"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="@id/explore_video_image"
        app:layout_constraintTop_toTopOf="@id/explore_video_image" />

    <TextView
        android:id="@+id/explore_video_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_travel_video_length"
        android:fontFamily="sans-serif"
        android:padding="6dp"
        android:textColor="@color/paletteWhite100"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/explore_video_image"
        app:layout_constraintEnd_toEndOf="@id/explore_video_image"
        tools:text="02:30" />

    <TextView
        android:id="@+id/explore_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2sp"
        android:maxLines="2"
        android:textColor="@color/paletteBlack100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/explore_video_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="India has a coal problem that it can't kick" />

    <TextView
        android:id="@+id/explore_video_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/explore_video_title"
        app:layout_constraintStart_toStartOf="@id/explore_video_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="travel_addict912" />

    <TextView
        android:id="@+id/explore_video_views"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/explore_video_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1K views" />

    <TextView
        android:id="@+id/explore_video_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/paletteDarkGreyD100"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/explore_video_views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/explore_video_views"
        tools:text="2 days ago" />

</androidx.constraintlayout.widget.ConstraintLayout>
