<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.mozilla.focus.home.HomeScreenBackground
        android:id="@+id/home_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_homescreen_color"
        android:scaleType="fitStart" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_arc_panel"
        android:layout_gravity="bottom"
        android:minHeight="160dp"
        android:paddingTop="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/main_list"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFFF00"
            android:paddingBottom="20dp"
            android:layout_marginBottom="12dp"/>

        <View
            android:id="@+id/page_indicator"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:background="#00FFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/shopping_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FF0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/home_fragment_fake_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#00FF00"
                app:layout_constraintStart_toEndOf="@id/shopping_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/home_fragment_menu_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#0000FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/home_fragment_tab_counter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FF00FF"
                app:layout_constraintEnd_toStartOf="@id/home_fragment_menu_button"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>