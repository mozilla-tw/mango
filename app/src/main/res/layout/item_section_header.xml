<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/header_title"
        style="@style/Subtitle1"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/paletteBlack87"
        tools:text="Heading to Bali" />

    <TextView
        android:id="@+id/header_more"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:drawableEnd="@drawable/ic_arrowblue_right"
        android:fontFamily="sans-serif"
        android:text="@string/travel_detail_section_more"
        android:textColor="@color/paletteDarkBlueC100"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>