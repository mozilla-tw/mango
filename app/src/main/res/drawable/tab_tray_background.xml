<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/gradient_background">
        <shape>
            <gradient
                android:angle="315"
                android:startColor="?themeGradientStart"
                android:centerColor="?themeGradientCenter"
                android:endColor="?themeGradientEnd" />
        </shape>
    </item>
    <item android:id="@+id/gradient_background_night">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/themeGradientEndNight"
                android:centerColor="@color/themeGradientStartNight"
                android:endColor="@color/themeGradientStartNight" />
        </shape>
    </item>
    <item android:id="@+id/background_overlay">
        <color android:color="@android:color/black" />
    </item>
</layer-list>
